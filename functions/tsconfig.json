{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@cadence/shared": ["../shared/src"],
      "@cadence/shared/*": ["../shared/src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
