{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@cadence/shared": ["../shared/src/index.ts"],
      "@cadence/shared/*": ["../shared/src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
