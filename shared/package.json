{
  "name": "@cadence/shared",
  "version": "1.0.0",
  "description": "Shared TypeScript utilities and logic for Cadence frontend and backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "npm run validate:workflows && tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate:workflows": "npx tsx scripts/validate-workflows.ts"
  },
  "dependencies": {
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "exports": {
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js",
      "require": "./dist/models/index.js"
    },
    "./validation": {
      "types": "./dist/validation/index.d.ts",
      "import": "./dist/validation/index.js",
      "require": "./dist/validation/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js"
    },
    "./defined": {
      "types": "./dist/defined/index.d.ts",
      "import": "./dist/defined/index.js",
      "require": "./dist/defined/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js"
    }
  }
}
